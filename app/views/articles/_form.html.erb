<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "" %>
  </div>
  <div class="form-group">
    <%= f.label :submit %>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
